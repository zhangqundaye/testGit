.head{
    position: relative;
    width: 100%;
    height: 25vh;
    overflow: hidden;
}
.backImg{
    width: 100%;
    height: 100%!important;
    filter: blur(5px);
}
.textImg{
    display: flex;
    align-items: center;
    height: 100%;
    width: 100%;
    position:absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
    
}
.textImg image{
    height: 100%;
    width:300rpx;border-radius: 5px;
}
.textImg text{
    flex: 1;
}
.select{
    color: red!important;
}